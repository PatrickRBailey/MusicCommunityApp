<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>@ViewBag.Title </title>

    <style>
        #postInput {
            width: 100%;
            font-size: 1em;
            display: inline;
            border: none;
            overflow: auto;
            outline: none;
            resize: none;
            -webkit-box-shadow: none;
            -moz-box-shadow: none;
            box-shadow: none;
        }

        #postDiv {
            background-color: #fff;
            margin-top: 20px;
            border: solid #d7ccc8 .5px;
        }
        .comments {
            width: 100%;
            height: 100px;
            background-color: #e3f2fd;
            position: relative;
            float: left;
            border: solid #d7ccc8 .5px;
            padding: 10px;
            margin-bottom: 10px;
            
        }


        #postBtn {
            margin-bottom: 10px;
            width: 75px;
        }

        .messages {
            width: 100%;
            background-color: #fff;
            position: relative;
            float: left;
            border: solid #d7ccc8 .5px;
            padding: 10px;
        }

        #subjectInput {
            margin: 20px;
            width: 30%;
        }

        #new_message_form {
            width:40%;
        }
        #comment_form {
            width: 40%;
        }

    </style>
</head>
<body>
    <ul class="nav nav-tabs">
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "Home")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")">@Html.ActionLink("About", "About", "Home")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "History" ? "active" : "")">@Html.ActionLink("History", "History", "Home")</li>
        <li role="presentation" class="@(ViewContext.RouteData.Values["Action"].ToString() == "AllMessages" ? "active" : "")">@Html.ActionLink("Forum", "AllMessages", "Forum")</li>
    </ul>
    <div>
        @RenderBody()
    </div>
</body>
</html>