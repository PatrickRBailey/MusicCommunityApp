﻿@model MusicCommunityApp.Models.CommentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Comment";
}

<h1 class="text-center">Leave a Comment:</h1>
<form asp-controller="Forum" asp-action="CommentForm" method="post">
    <div class="form-group center-block" id="comment_form">
        <input asp-for="MessageID" type="hidden" />
        <textarea asp-for="Comment.Body" class="form-control"></textarea><br />

        <button type="submit" class="btn btn-primary pull-right">Post</button>
    </div>
</form>